<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claudinho Enterprise</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link rel="shortcut icon" href="imgs/logo.png" type="image/x-icon">
</head>

<body>
    <!-- Navegação -->
    <nav id="navbarScrollSpy" class="navbar navbar-expand-lg navbar-dark bg-info sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="imgs/logo.png" alt="Logo" class="me-2" style="width: 40px;">
                <div>
                    <h4 class="mb-0">Claudinho</h4>
                    <h6 class="mb-0">Enterprise</h6>
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#sobreNos">Sobre nós</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#servicos">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="login.html">Login</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container">

        <!-- Bloco login -->
        <div class="row m-5">
            <div class="col d-flex align-items-center justify-content-center" style="height: 50vh;">
                <div class="shadow rounded" style="width: 70vh;">

                    <ul class="nav nav-underline justify-content-center m-4" id="loginTabs">
                        <li class="nav-item ">
                            <a class="nav-link active" aria-current="page" href="#loginForm" onclick="setActiveTab(this)">
                                <h4 style="color: black;">Entrar</h4>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="#cadastroForm" onclick="setActiveTab(this)">
                                <h4 style="color: black;">Cadastrar-se</h4>
                            </a>
                        </li>

                    </ul>

                    <!-- Login / Entrar -->

                    <div id="loginForm">
                        <div class="row mb-3 justify-content-center">
                            <div class="col-sm-6">

                                <label for="inputEmail" class="form-label m-2 mt-5" style="font-weight: 500;">Email</label>
                                <input type="text" class="form-control border-start-0" id="inputEmail">

                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">
                            <div class="col-sm-6">
                                <label for="inputPassword" class="form-label m-2 mt-3" style="font-weight: 500;">Senha</label>
                                <input type="password" class="form-control border-start-0" id="inputPassword">

                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">

                            <div class="col d-flex justify-content-center">
                                <button type="button" class="btn btn-info">Entrar</button>
                            </div>
                            <div class="row">
                                <div class="col d-flex justify-content-center m-3">
                                    <a href="" style="text-decoration: none;">Esqueceu a senha?</a>
                                </div>
                            </div>

                        </div>

                    </div>



                    <!-- Cadastro Form (inicialmente oculto) -->
                    <div id="cadastroForm" class="d-none">
                        <div class="row mb-3 justify-content-center">
                            <div class="col-sm-6">
                                <label class="form-label m-2 mt-5" style="font-weight: 500;">Nome</label>
                                <input type="text" class="form-control" id="inputNome">
                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">
                            <div class="col-sm-6">
                                <label class="form-label m-2" style="font-weight: 500;">Email</label>
                                <input type="text" class="form-control" id="inputEmailCadastro">
                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">
                            <div class="col-sm-6">
                                <label class="form-label m-2" style="font-weight: 500;">Senha</label>
                                <input type="password" class="form-control" id="inputSenhaCadastro">
                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">
                            <div class="col d-flex justify-content-center">
                                <button type="button" class="btn btn-info">Cadastrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        function setActiveTab(clickedLink) {
            const tabs = document.querySelectorAll('#loginTabs .nav-link');
            tabs.forEach(tab => tab.classList.remove('active'));
            clickedLink.classList.add('active');

            const tabText = clickedLink.innerText.trim();

            const loginForm = document.getElementById('loginForm');
            const cadastroForm = document.getElementById('cadastroForm');

            if (tabText === "Entrar") {
                loginForm.classList.remove('d-none');
                cadastroForm.classList.add('d-none');
            } else {
                loginForm.classList.add('d-none');
                cadastroForm.classList.remove('d-none');
            }
        }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>